{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build",
			"command": "/usr/bin/g++-8 -g ${file} -o ${fileDirname}/${fileBasenameNoExtension}.exe",
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
		},
		{
			"type": "shell",
			"label": "build and run",
			"command": "/usr/bin/g++-8 -g ${file} -o ${fileDirname}/${fileBasenameNoExtension}.exe && ${fileDirname}/${fileBasenameNoExtension}.exe",
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
		}
	]
}